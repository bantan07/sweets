<p id="notice"></p>
<div class="container">
    <div class="px-3 mx-auto">
        <%= render 'users/user',user:@user %>
        <%= link_to "新規投稿", new_sweets_shop_path, class:'btn btn-primary' %>
      <h3>投稿一覧</h3>
      <div class="row">
        <% @sweets_shops.each do |sweets_shop| %>
          <div class="col-md-3">
            <%= link_to sweets_shop_path(sweets_shop.id) do %>
              <%= attachment_image_tag sweets_shop, :image, class: 'img-fluid' %>
            <% end %>
            <h3><%= link_to sweets_shop.shop_name, sweets_shop_path(sweets_shop.id) %></h3></br>
            <% sweets_shop.tags.each do |tag| %>
              [<%= tag.name %>]
            <% end %></br>
            <%= sweets_shop.created_at.strftime('%Y/%m/%d') %>
            いいね<%= sweets_shop.likes.count %>
          </div>
        <% end %>
      </div>
    </div>
</div>