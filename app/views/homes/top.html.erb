<p id="notice"></p>
<div class="container">
  <!--<div class=row>-->
    <div class="px-3 mx-auto">
      <h2>オジェドオヌルドネイルド</h2>
      <h3>
        昨日も今日も明日も</br>
        自分にご褒美を
      </h3>
      <%#= form_tag(search_path,:method => 'get') do %>
        <%#= text_field_tag :search %>
        <%#= submit_tag 'Search', :name => nil %>
      <%#= end %>

      <div class="row">
        <% @sweets_shops.each do |sweets_shop| %>
          <div class="col-md-3">
            <%= link_to sweets_shop_path(sweets_shop.id) do %>
              <%= attachment_image_tag sweets_shop, :image, class: 'img-fluid' %>
            <% end %>
            <h3><%= link_to sweets_shop.shop_name, sweets_shop_path(sweets_shop.id) %></h3>
            <% sweets_shop.tags.each do |tag| %>
              [<%= tag.name %>]
            <% end %></br>
            <%= sweets_shop.created_at.strftime('%Y/%m/%d') %>
            いいね<%= sweets_shop.likes.count %>
          </div>
        <% end %>
      </div>
    </div>
  <!--</div>-->
</div>