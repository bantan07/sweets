<p id="notice"></p>
<div class=container>
 <div class=row>
  <div class="px-3">
   <h4>
    <%= @user.name %>
    の会員情報編集
    </h4>
    <%= form_with model:@user, url: admin_users_path(@customer.id), local:true,method: :patch do |f| %>
    <div class=group>
     <label for="id">会員ID
      <%= @user.id %>
     </label>
    </div>
   <div class=form-group>
     <label for="sale">会員ステータス
      <%= f.radio_button(:is_active, true) %>
      <%= f.label :is_active, "有効", style: "display: inline-block;" %>
      <%= f.radio_button(:is_active, false) %>
      <%= f.label :is_active, "退会", style: "display: inline-block;" %>
    </label>
   </div>
    <%=f.submit "変更を保存", class:'btn btn-success'  %>
    <% end %>
  </div>
 </div>
</div>