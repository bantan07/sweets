<p id="notice"></p>
<div class=container>
 <div class=row>
  <div class="px-3 mx-auto">
   <h4>新規会員登録</h4>
   <%= form_with model:@user, url: user_registration_path, local:true do |f| %>

    <div class="f-group">
     <label for="name">名前
      <%=f.text_field :name %>
     </label>

    <div class=f-group>
     <label for="email">メールアドレス
      <%= f.text_field :email %>
     </label>

    <div class=f-group>
     <label for="password">パスワード(6文字以上)
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
     </label>
    </div>

    <div class=f-group>
     <label for="password_confirmation">パスワード(確認用)
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
     </label>
    </div>
    <div class="text-center">
      <%=f.submit "新規登録", class:'btn btn- btn-success' %>
    </div>
    <% end %>
    <%= link_to "ログインはこちら", new_user_session_path %>
  </div>
 </div>
</div>
