<p id=notice></p>
<div class=container>
 <div class=row>
  <div class="px-3 mx-auto">
    <h4>ログイン</h4>
     <%= form_with model:resource, url: session_path(resource), local: true do |f| %>
       <%= render 'layouts/error', model: f.object %>
       <div class=form-group>
         <label for="email">メールアドレス
          <%= f.text_field :email %>
         </label>
       </div>
        <div class=form-group>
         <label for="password">パスワード
        <%= f.password_field :password %>
        </label>
       </div>
       <div class="text-center">
         <%=f.submit "ログイン" , class:'btn btn- btn-success' %>
       </div>
     <% end %>
     <%= link_to "新規登録はこちらから", new_user_registration_path %>
  </div>
 </div>
</div>

